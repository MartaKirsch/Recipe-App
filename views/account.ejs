                <div class="recipesName">
                  Apple Cinnamon Oatmeal
                </div>
                <div class="tags">
                  <div class="tag">360kcal</div>
                  <div class="tag">Breakfast</div>
                  <div class="tag">Sweet</div>
                  <div class="tag">Vege</div>
                </div>
              </div>
            </a>

            <a href="">
              <img src="/public/img/oatmeal.jpg" alt="">
              <div class="recipesText">
                <div class="recipesName">
                  Apple Cinnamon Oatmeal
                </div>
                <div class="tags">
                  <div class="tag">360kcal</div>
                  <div class="tag">Breakfast</div>
                  <div class="tag">Sweet</div>
                  <div class="tag">Vege</div>
                </div>
              </div>
            </a>

          </div>

        </div>

      </div>

    </main>
  </body>
</html>
